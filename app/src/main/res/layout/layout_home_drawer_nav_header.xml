<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_material_height"
    android:background="@drawable/shape_home_nav_header_background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/nav_header_home_vertical_margin"
    android:paddingLeft="@dimen/nav_header_home_horizontal_margin"
    android:paddingRight="@dimen/nav_header_home_horizontal_margin"
    android:paddingTop="@dimen/nav_header_home_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!-- Navigation Header ImageView -->
    <ImageView
        android:id="@+id/image_home_nav_header_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_material_vertical_spacing"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <!-- Navigation Header Title -->
    <TextView
        android:id="@+id/text_home_nav_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_material_vertical_spacing"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

</LinearLayout>
