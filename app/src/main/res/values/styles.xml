<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for Custom App Bar -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Style for Popups in Custom App Bar -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- ==================================== -->
    <!-- COMMON AND/OR BASE STYLES OF THE APP -->
    <!-- ==================================== -->

    <!-- Base Style for the CardViews -->
    <style name="BaseCardLightStyle" parent="CardView.Light">
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">@dimen/card_all_corner_radius</item>
    </style>

    <!-- Base Style for the Small Sized Texts -->
    <style name="BaseSmallTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <!-- Base Style for the Small Sized Texts with Theme Inverse Color -->
    <style name="BaseSmallTextInverseStyle" parent="BaseSmallTextStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small.Inverse</item>
    </style>

    <!-- Common Style for CardViews used for Explanation -->
    <style name="AllExplanationCardStyle" parent="BaseCardLightStyle">
        <item name="android:layout_width">@dimen/match_constraint_0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Common Style used for the container of Explanation CardViews -->
    <style name="AllExplanationContainerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/card_all_explanation_content_padding</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- Common Style for Explanation Text shown in Explanation CardViews -->
    <style name="AllExplanationTextStyle" parent="ConstraintCenterInParentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableTop">@drawable/ic_all_explanation</item>
        <item name="android:drawablePadding">@dimen/text_all_explanation_drawable_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small.Inverse</item>
    </style>

    <!-- Style for Hero Image or Backdrop Image shown in Collapsing Toolbar container -->
    <style name="AllHeroImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="layout_collapseMode">parallax</item>
    </style>

    <!-- Style for the Top Scrim shown on Hero Image -->
    <style name="AllHeroImageScrimTopStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/shape_all_scrim_top</item>
        <item name="android:layout_gravity">top</item>
    </style>

    <!-- Style for the Bottom Scrim shown on Hero Image -->
    <style name="AllHeroImageScrimBottomStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/shape_all_scrim_bottom</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <!-- Common Style of Bullet Text -->
    <style name="AllBulletMarkTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/all_bullet_mark</item>
    </style>

    <!-- Derived Style of Bullet Text with Small Text Size -->
    <style name="AllBulletMarkTextStyle.Small">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <!-- Derived Style of Bullet Text with Small Text Size and Theme Inverse Text Color -->
    <style name="AllBulletMarkTextStyle.SmallInverse">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small.Inverse</item>
    </style>

    <!-- Common Style used for the Anchored Play FloatingActionButtons -->
    <style name="AllToolbarAnchoredFabPlayStyle" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/fab_material_margin</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">
            @dimen/fab_material_margin
        </item>
        <item name="srcCompat">@drawable/ic_all_play_white</item>
        <item name="fabSize">mini</item>
        <item name="layout_anchorGravity">bottom|right|end</item>
        <item name="layout_behavior">
            com.example.kaushiknsanji.rhythm.extensions.ScrollAwareAnchoredFabBehavior
        </item>
    </style>

    <!-- ================================== -->
    <!-- STYLES USED FOR CONSTRAINT LAYOUTS -->
    <!-- ================================== -->

    <!-- Style to align the View component under ConstraintLayout in center_horizontal format -->
    <style name="ConstraintCenterHorizontalStyle">
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

    <!-- Style to align the View component under ConstraintLayout to the Top in center_horizontal format -->
    <style name="ConstraintTopCenterHorizontalStyle" parent="ConstraintCenterHorizontalStyle">
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <!-- Style to align the View component under ConstraintLayout to the Bottom in center_horizontal format -->
    <style name="ConstraintBottomCenterHorizontalStyle" parent="ConstraintCenterHorizontalStyle">
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <!-- Style to align the View component under ConstraintLayout to the complete Center of its Parent -->
    <style name="ConstraintCenterInParentStyle" parent="ConstraintCenterHorizontalStyle">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <!-- Style to align the View component under ConstraintLayout in center_vertical format -->
    <style name="ConstraintCenterVerticalStyle">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <!-- Style to align the View component under ConstraintLayout to the Left in center_vertical format -->
    <style name="ConstraintLeftCenterVerticalStyle" parent="ConstraintCenterVerticalStyle">
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <!-- Style to align the View component under ConstraintLayout to the Right in center_vertical format -->
    <style name="ConstraintRightCenterVerticalStyle" parent="ConstraintCenterVerticalStyle">
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

    <!-- Style used for Constrained Texts -->
    <style name="ConstrainedTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <!-- Derived Style of Constrained Texts limited to Single Line -->
    <style name="ConstrainedTextStyle.SingleLine">
        <item name="android:maxLines">1</item>
    </style>

    <!-- Derived Style of Constrained Texts limited to Single Line and Left aligned -->
    <style name="ConstrainedTextStyle.SingleLine.LeftAlign">
        <item name="layout_constraintHorizontal_bias">0</item>
    </style>

    <!-- Derived Style of Constrained Texts limited to Single Line with ellipse at end -->
    <style name="ConstrainedTextStyle.SingleLine.Ellipsize">
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Derived Style of Constrained Texts limited to Single Line with ellipse at end and Left aligned -->
    <style name="ConstrainedTextStyle.SingleLine.Ellipsize.LeftAlign">
        <item name="layout_constraintHorizontal_bias">0</item>
    </style>

    <!-- Derived Style of Constrained Texts with Marquee animation -->
    <style name="ConstrainedTextStyle.Marquee">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Derived Style of Constrained Texts which is left aligned along with Marquee animation -->
    <style name="ConstrainedTextStyle.Marquee.LeftAlign">
        <item name="layout_constraintHorizontal_bias">0</item>
    </style>

    <!-- ====================================== -->
    <!-- STYLES USED FOR HOME ACTIVITY/FRAGMENT -->
    <!-- ====================================== -->
    <style name="HomeDrawerMenuTitleTextTheme">
        <item name="android:textColorSecondary">@color/homeDrawerMenuTitleTextColor</item>
    </style>

    <style name="HomeDrawerNavigationViewStyle" parent="Widget.Design.NavigationView">
