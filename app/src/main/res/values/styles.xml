    <style name="SongListTrackTitleStyle" parent="AlbumDetailTrackTitleStyle">
        <item name="android:layout_marginTop">@dimen/song_list_track_spacing</item>
        <item name="android:layout_marginLeft">@dimen/song_list_track_horizontal_margin</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">
