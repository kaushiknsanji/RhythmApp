        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@color/homeDrawerMenuBackgroundColor</item>
        <item name="itemBackground">?attr/selectableItemBackground</item>
        <item name="itemTextColor">@color/state_home_drawer_nav_item_text_color</item>
        <item name="itemIconTint">@color/state_home_drawer_nav_item_text_color</item>
    </style>

    <style name="HomeItemCardStyle" parent="BaseCardLightStyle">
        <item name="android:layout_width">@dimen/match_constraint_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/card_home_item_vertical_margin</item>
        <item name="cardCornerRadius">@dimen/card_home_corner_radius</item>
    </style>

    <style name="HomeItemImageStyle" parent="ConstraintTopCenterHorizontalStyle">
        <item name="android:layout_width">@dimen/image_home_item_size</item>
        <item name="android:layout_height">@dimen/image_home_item_size</item>
    </style>

    <style name="HomeItemTitleStyle" parent="ConstraintCenterHorizontalStyle">
        <item name="android:layout_width">@dimen/match_constraint_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/card_home_item_title_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <!-- =================================== -->
    <!-- STYLES USED FOR ALBUM LIST FRAGMENT -->
    <!-- =================================== -->
    <style name="AlbumListItemCardStyle" parent="BaseCardLightStyle">
        <item name="android:layout_width">@dimen/match_constraint_0dp</item>
