        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small.Inverse</item>
    </style>

    <style name="AlbumDetailTrackImageButtonsStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/imgbtn_album_detail_track_size</item>
        <item name="android:layout_height">@dimen/imgbtn_album_detail_track_size</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="AlbumDetailTrackLengthStyle" parent="BaseSmallTextInverseStyle">
        <item name="android:layout_marginRight">@dimen/text_album_detail_track_length_margin_right
        </item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">
            @dimen/text_album_detail_track_length_margin_right
        </item>
        <item name="android:text">@string/all_song_duration</item>
    </style>

    <!-- ================================== -->
    <!-- STYLES USED FOR SONG LIST FRAGMENT -->
    <!-- ================================== -->
