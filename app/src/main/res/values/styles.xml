    </style>

    <style name="AlbumListItemTitleStyle" parent="ConstraintCenterHorizontalStyle">
        <item name="android:layout_width">@dimen/match_constraint_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/card_album_list_item_title_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
