        <item name="android:layout_marginRight">@dimen/album_detail_track_horizontal_margin</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">
            @dimen/album_detail_track_horizontal_margin
        </item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="AlbumDetailTrackArtistsStyle" parent="ConstrainedTextStyle.SingleLine.Ellipsize.LeftAlign">
        <item name="android:layout_marginTop">@dimen/text_album_detail_track_artists_margin_top
        </item>
        <item name="android:layout_marginRight">@dimen/album_detail_track_horizontal_margin</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">
